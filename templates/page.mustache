<!doctype html>
<html class="{{#if is_export}}export{{/if}}">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content="filter &amp; sort magical layouts" />

  <title>Isotope v2{{#unless page.is_homepage}} &middot; {{page.title}}{{/unless}}</title>

  {{#if is_dev}}
    {{! DEV MODE - including each .css file }}
    {{#each css_paths}}
      <link rel="stylesheet" href="../{{../root_path}}{{this}}" />
    {{/each}}
  {{else}}
    {{! in production, just include concat CSS }}
    <!-- Isotope does not require any CSS files -->
    <link rel="stylesheet" href="{{#if page.is_404}}/{{else}}{{root_path}}{{/if}}css/isotope-docs.css" media="screen" />
  {{/if}}

  {{! Twitter Cards }}
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="@metafizzyco" />
  <meta name="twitter:url" content="http://isotope.metafizzy.co/{{basename}}.html" />
  <meta name="twitter:title" content="Isotope{{#unless page.is_homepage}} {{page.title}}{{/unless}}" />
  <meta name="twitter:description" content="filter &amp; sort magical layouts" />

</head>
<body class="page--{{basename}}" data-page="{{basename}}">

  {{> nav}}

{{! display hero only on index page }}
{{#if page.is_homepage}}
{{>hero}}
{{/if}}

  <div id="content" class="main">
    <div class="primary-content">
      {{#unless page.is_homepage}}
        <h1>{{page.title}}</h1>
      {{/unless}}

{{! all page content goes here }}
{{> body}}
    </div>
  </div>

  {{> site-footer}}

<!-- Looking for isotope.js? Use {{source_url_path}}isotope.pkgd.min.js -->
<!-- Isotope does NOT require jQuery. But it does make things easier -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="{{root_path}}/jquery.min.js"><\/script>')</script>

{{#if is_dev}}
  {{#each js_paths}}
    {{! DEV MODE - including each .js file }}
    <script src="../{{../root_path}}{{this}}"></script>
  {{/each}}
{{else}}
  {{! in production, just include concat/minified js }}
  <script src="{{#if page.is_404}}/{{else}}{{root_path}}{{/if}}js/isotope-docs.min.js"></script>
{{/if}}

{{#unless is_export}}
  <!-- Google Analytics - Remove this if you copy/pasted this page -->
  <script>
    // Google Analytics
    (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
    function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
    e=o.createElement(i);r=o.getElementsByTagName(i)[0];
    e.src='//www.google-analytics.com/analytics.js';
    r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
    ga('create','UA-58739927-3','auto');ga('send','pageview');
  </script>
{{/unless}}

</body>
</html>
